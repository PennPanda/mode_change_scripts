<!--async with periodicity
one unchanged vcpu
one new vcpu
Two changed vcpus  
old period is 50ms
budget default is 6ms
offset for new task is 5ms
-->
<?xml versdion="1.0"?>
<request cpu = "3">
    <vcpu type="unchanged" id="0">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
       </disable_old>
        <release_new>
            <guard_new type="timer">
                <timer>5000000</timer>
            </guard_new>
       </release_new>
    </vcpu>
    <vcpu type="new" id="1">
        <release_new>
            <guard_new type="time">
                <timer>5000000</timer>
            </guard_new>
        </release_new>
        <budget>6000000</budget>
        <period>51000000</period>
        <criticality>0</criticality>
    </vcpu>
    <vcpu type="changed" id="2">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
        </disable_old>
        <release_new>
            <guard_new type="timer">
            <timer>5000000</timer>
            </guard_new>
       </release_new>
       <budget>6000000</budget>
       <period>49000000</period>
       <criticality>0</criticality>
 
    </vcpu>
    <vcpu type="old" id="3">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
       </disable_old>
    </vcpu>
    <vcpu type="unchanged" id="4">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
       </disable_old>
        <release_new>
            <guard_new type="timer">
                <timer>5000000</timer>
            </guard_new>
       </release_new>
    </vcpu>
    <vcpu type="new" id="5">
        <release_new>
            <guard_new type="time">
                <timer>5000000</timer>
            </guard_new>
        </release_new>
        <budget>6000000</budget>
        <period>51000000</period>
        <criticality>0</criticality>
    </vcpu>
    <vcpu type="changed" id="6">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
        </disable_old>
        <release_new>
            <guard_new type="timer">
            <timer>5000000</timer>
            </guard_new>
       </release_new>
       <budget>6000000</budget>
       <period>49000000</period>
       <criticality>0</criticality>
 
    </vcpu>
    <vcpu type="old" id="7">
        <disable_old>
            <action_running_old>continue</action_running_old>
            <action_not_running_old>continue</action_not_running_old>
       </disable_old>
    </vcpu>
</request>
